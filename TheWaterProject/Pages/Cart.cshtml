@page
@using Microsoft.AspNetCore.Identity
@model TheWaterProject.Pages.CartModel
@inject SignInManager<IdentityUser> SignInManager
@{
}
<style>
    .custom-btn-color{
        background-color: #f06525;
    }
    thead {
        background-color: #f4ae91; /* Adjust the color as needed */
        border-radius: 20px 20px 0 0; /* Rounded corners at the top */
    }
</style>
<h2 style="font-weight: bold">Your Cart</h2>
<table class="table table-bordered table-striped">
    
    <thead>
    <th>Product Name</th>
    <th>Quantity</th>
    <th class="text-right">Amount</th>
    <th class="text-right">Subtotal</th>
    <th></th>
    </thead>
    
    <tbody>
    @foreach (var l in Model.Cart?.Lines ?? Enumerable.Empty<Cart.CartLine>())
    {
        <tr>
            <td class="text-left">@l.Product.Name</td>
            <td class="text-center">@l.Quantity</td>
            <td class="text-right">@l.Product.Price</td>
            <td class="text-right">@((l.Quantity * l.Product.Price).ToString("c"))</td>
            <td class="text-center ">
                <form asp-page-handler="Remove" method="post">
                    <input type="hidden" name="product_ID" value="@l.Product.product_ID"/>
                    <input type="hidden" name="returnUrl" value="@Model?.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
    
    <tfoot>
    <tr>
        <td colspan="3" class="text-right">Total:</td>
        <td class="text-right">@Model.Cart?.CalculateTotal().ToString("c")</td>
    </tr>
    </tfoot>
    
</table>

<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-page-handler="Checkout" method="post">  <button type="submit" class="btn btn-success">Checkout</button>
        </form>
    }
    else
    {
        <a class="btn btn-warning" asp-area="Identity" asp-page="/Account/Login">Login to Checkout</a>
    }
    
    <a class="btn btn-primary" href="@Model.ReturnUrl">Back to shopping!</a>
</div>