@model ProductsListViewModel

<style>
.home-image {
  width: 100%;
  object-fit: cover; /* Cover the area without stretching the image */
  object-position: center; /* Center the image within the area */
  opacity: 0.9;
}

/* Newly added styles */
.shopping-ad {
  position: relative;
  width: 100%;
  height: 450px;;
  /*max-width: 1600px; !* Maximum width *!*/
  /*height: 450px; !* Adjusted height *!*/
  margin: 0 auto; /* Center the div if the screen is wider than 1600px */
  overflow: hidden; /* Prevent any overflow from the container */
  box-sizing: border-box; /* Include padding in width calculation */
  margin-bottom: 25px;
}

.shop-now-btn {
  position: absolute;
  bottom: 50%; /* Distance from bottom */
  left: 50%; /* Center the button horizontally */
  transform: translateX(-50%);
  background-color: rgba(255, 69, 0, 0.8); /* Orange color with transparency */
  color: white; /* Text color */
  padding: 10px 20px; /* Top and bottom padding, left and right padding */
  border: none; /* Remove border */
  border-radius: 30px; /* Fully rounded corners */
  font-size: 2.5em; /* Make the text larger */
  text-transform: uppercase; /* Uppercase text */
  font-weight: bold; /* Bold text */
  cursor: pointer; /* Cursor changes to a pointer to indicate it's clickable */
  text-decoration: none; /* Remove underline from links */
  display: inline-block; /* Allows for padding and margin */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  text-align: center;
  vertical-align: middle;
  }
  
  /* Align center */
</style>

<img class="logo" src="Assets/LOGO.png" />

<!-- WELCOME TEXT
Could be cool to to have the user's name -->
<div class="welcome-text">
    WELCOME TO BRICKWELL! YOUR ONE STOP SHOP FOR ALL THINGS LEGO!<br/>HAPPY BRICKING!
</div>

<!-- Big Shopping Ad & 'Shop Now' Button 
still need to correctly link the button to the shopping page-->
<div class="shopping-ad">
    <img class = "home-image" src="~/Assets/lego-crossing copy 2.jpeg" alt="Legos crossing the street"/>
    <a asp-controller="Home" asp-action="Products" class="shop-now-btn">SHOP NOW</a>
</div>

<!-- Boxes For Recommended Products -->
<div class="row">
    @foreach (TopProducts tp in Model.TopProducts)
    {
        <partial name="ProductRecommendations" model="tp"/>
    }
</div>