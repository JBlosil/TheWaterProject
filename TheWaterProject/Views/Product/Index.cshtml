@{
    ViewData["Title"] = "Product View";
}

@model ProductsListViewModel

<h1>Brickwell</h1>

@foreach (Product p in Model.Products)
{
    <partial name="ProductSummary" model="p"/>
}

<div page-model = "@Model.PaginationInfo" page-action = "Index" page-class-enabled = "true" 
     page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-url-productCategory="@Model.CurrentProductCategory" class="btn-group pull-right m-1"></div>
    
