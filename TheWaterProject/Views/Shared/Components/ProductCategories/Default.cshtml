@{
}

@model IQueryable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index" asp-route-productCategory="" asp-route-pageNum="">Home</a>
    
    @foreach (string pc in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(pc == ViewBag.SelectedProductCategory ? "btn-primary" : "btn-outline-secondary")" asp-controller="Product" asp-action="Index" asp-route-productCategory="@pc" asp-route-pageNum="1">@pc</a>
    }
</div>