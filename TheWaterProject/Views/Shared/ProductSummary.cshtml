@{
}

@using TheWaterProject.Infrastructrue
@model Product

<div class="card m-1 p-1">
    <h4>@Model.Name 
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$@Model.Price.00</small></span>
    </h4>
        
    <ul>
        <li>Product Category: @Model.Category</li>
        <li>Number of Legos: @Model.Num_Parts</li>
        <li>Release Year: @Model.Year</li>
    </ul>
    <form id=@Model.product_ID method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.product_ID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-success btn-sm float-end">Add to Cart</button>
    </form>

</div>