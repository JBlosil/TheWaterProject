@{
}

@using TheWaterProject.Infrastructrue
@model Product

<style>
.card {
    border: none;
    transition: transform .2s; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);/* Animation for hover transform */
}
.card:hover {
    transform: scale(1.05); /* Slightly enlarge cards on hover */
}
.card-img-top {
    width: 100%;
    height: 200px; /* or 'auto' if you want to maintain the aspect ratio */
    object-fit: contain; /* This will cover the top area of the card evenly */
}
.card-body {
    display: flex;
    flex-direction: column;
    padding-bottom: 50px;/* Aligns the button to the bottom */
}
.card-title {
    font-size: 1rem;
     margin-bottom: 0.5rem;/* Adjust font size as needed */
}
.card-text.price {
    font-size: 1.25rem;
    font-weight: bold;
}
.card-text {
    font-size: .875rem; /* Adjust font size as needed */
    color: #555; /* Dark grey color for price */
}
.text-center {
    text-align: center;
}
.btn-smooth {
        background-color: #ff4500; /* Your desired color */
        color: white;
        border: none;
        border-radius: 20px; /* Makes the button edges round */
        padding: 10px 20px;
        transition: background-color 0.3s ease-in-out;
        position: absolute;
        left: 50%;
        bottom: 10px; /* Space from the bottom */
        transform: translateX(-50%);
}
.btn-orange {
    color: #fff;
    background-color: #f96302; /* The orange color from your button */
    border-color: #f96302;
}
.btn-orange:hover {
    background-color: #dc5400; /* Darken button when hovering */
}
/* Ensures the button sticks to the bottom of the card */
.mt-auto {
    margin-top: auto;
}
</style>


<div class="col-md-4 col-sm-6 mb-4">
    <div class="card h-100">
        <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@Model.product_ID">
            <img src="@Model.img_link" alt="Image of @Model.Name" class="card-img-top"/>
        </a>

        <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center">@Model.Name</h5>
            <p class="card-text price text-center">$@Model.Price.00</p>
            <form id=@Model.product_ID method="post" asp-page="/Cart">
                <input type="hidden" asp-for="product_ID"/>
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                <button type="submit" class="btn btn-smooth">Add to Cart</button>
            </form>
        </div>
    </div>
</div>
